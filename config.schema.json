{
  "pluginAlias": "LMSPlatform",
  "pluginType": "platform",
  "schema": {
    "type": "object",
    "required": ["server"],
    "properties": {
      "name": {
        "title": "Platform Name",
        "type": "string",
        "default": "Lyrion Music Server"
      },
      "server": {
        "title": "LMS Server Address",
        "type": "string",
        "description": "Full URL including port, e.g. http://192.168.0.25:9000",
        "default": "http://192.168.0.25:9000"
      },
      "autodiscover": {
        "title": "Auto-discover Players",
        "type": "boolean",
        "default": true
      },
      "pollInterval": {
        "title": "Poll Interval (seconds)",
        "type": "number",
        "default": 5,
        "minimum": 2,
        "maximum": 60
      }
    }
  }
}
